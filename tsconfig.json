{
  "compilerOptions": {
    "allowJs": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "sourceMap": true,
    "moduleResolution": "Node",
    "strict": false,  // 关闭严格检查
    "baseUrl": ".",
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "skipLibCheck": true,
    "noEmit": false,
    "paths": {
      "@/*": [
        "src/*"
      ],
      "/#/*": [
        "types/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "types/**/*.d.ts",
    "config/*.common.ts",
    "config/*.dev.ts",
    "config/*.prod.ts",
    "src/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ],
}